{
  "manifest_version": 2,
  "name": "Check-mate",
  "version": "1.0",
  "description": "A Firefox extension that helps you with various tooling and quick recon",
  "icons": {
    "48": "assets/icons/logo.png"
  },
  "browser_action": {
    "default_icon": {
      "48": "assets/icons/logo.png"
    },
    "default_title": "Check-mate",
    "default_popup": "index.html"
  },
  "permissions": [
    "tabs",
    "cookies",
    "activeTab",
    "storage",
    "http://*/",
    "https://*/",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/js/content-scripts/content-script.js", "assets/js/content-scripts/monitor-script.js"]
    }
  ],
  "background": {
    "scripts": ["assets/js/background-scripts/background.js", "assets/js/background-scripts/webrequest.js"],
    "persistent": true
  },
  "web_accessible_resources": [
    "assets/icons/logo.png"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
